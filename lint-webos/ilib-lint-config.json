{
    "name": "settings-lint",
    "sourceLocale": "en-KR",
    "locales": [
        "en-US",
        "de-DE",
        "ja-JP",
        "ko-KR",
        "am-ET"
    ],
    "plugins": [
    ],
    "rulesets": {
        "webos-translation-rules": { // you can also define rulesets in the webos plugin
           "resource-unique-keys": true,
           "resource-named-params": true,
           "resource-url-match": true,
           "resource-quote-style": true
        }
    },
    "filetypes":{
        "xliff" : {  // last two will be defined by the webos plugin
            "ruleset": [ 
                /*"source",*/ "webos-translation-rules"
            ]
        }
    },
    "paths": {
        "**/[a-z][a-z]*-([A-Z][A-Z]).xliff": "xliff"  // this specifies the file type by file type name
    }
}
