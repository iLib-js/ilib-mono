{
  "private": true,
  "name": "ilib-mono",
  "packageManager": "pnpm@9.12.3+sha512.cce0f9de9c5a7c95bef944169cc5dfe8741abfb145078c0d508b868056848a87c81e626246cb60967cbd7fd29a6c062ef73ff840d96b3c86c40ac92cf4a813ee",
  "scripts": {
    "build": "turbo build",
    "postinstall": "cp git-hooks/* .git/hooks/ && ./scripts/setup-git-skip-worktree.sh",
    "ci:coverage:unit:affected": "turbo coverage --concurrency=5 --affected",
    "ci:test:unit:all": "turbo test --concurrency=5",
    "ci:test:unit:affected": "turbo test --concurrency=5 --affected",
    "ci:test:web:all": "turbo test:web --concurrency=5",
    "ci:test:web:affected": "turbo test:web --concurrency=5 --affected",
    "ci:test:e2e:all": "turbo test:e2e --concurrency=5",
    "ci:test:e2e:affected": "turbo test:e2e --concurrency=5 --affected",
    "ci:release": "pnpm build && pnpm changeset publish",
    "coverage": "pnpm coverage:unit:affected",
    "coverage:unit:affected": "turbo coverage --affected",
    "coverage:unit:all": "turbo coverage",
    "test": "pnpm test:unit:affected",
    "test:unit": "pnpm test:unit:affected",
    "test:unit:all": "turbo test",
    "test:unit:affected": "turbo test --affected --output-logs=new-only",
    "test:unit:force": "turbo test --force",
    "test:web": "pnpm test:web:affected",
    "test:web:all": "turbo test:web",
    "test:web:affected": "turbo test:web --affected --output-logs=new-only",
    "test:web:force": "turbo test:web --force",
    "test:e2e": "pnpm test:e2e:affected",
    "test:e2e:all": "turbo test:e2e",
    "test:e2e:affected": "turbo test:e2e --affected --output-logs=new-only",
    "test:e2e:force": "turbo test:e2e --force",
    "doc": "pnpm -F '[origin/main]' doc",
    "run:loctool": "NODE_PATH=packages node --inspect packages/loctool/loctool.js",
    "run:lint": "NODE_PATH=packages node --inspect packages/ilib-lint/src/index.js",
    "run:samples": "pnpm -F '{packages/*/samples/*}' run:sample",
    "run:samples:affected": "pnpm -F '{packages/*/samples/*}[origin/main]' run:sample"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "jest-junit": "^16.0.0",
    "semver": "^7.6.3",
    "turbo": "^2.2.3"
  },
  "pnpm": {
    "patchedDependencies": {
      "@changesets/assemble-release-plan@6.0.4": "patches/@changesets__assemble-release-plan@6.0.4.patch"
    }
  }
}