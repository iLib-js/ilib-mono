{
    "name": "ilib-po",
    "version": "1.0.0",
    "main": "./lib/index.js",
    "module": "./src/index.ts",
    "exports": {
        ".": {
            "import": "./src/index.ts",
            "require": "./lib/index.js"
        },
        "./ilib-po.d.ts": "./ilib-po.d.ts"
    },
    "description": "Library of code to parse and generate PO files.",
    "keywords": [
        "internationalization",
        "i18n",
        "localization",
        "l10n",
        "globalization",
        "g11n",
        "xliff",
        "po",
        "gettext",
        "translation"
    ],
    "homepage": "https://github.com/iLib-js/ilib-mono/packages/ilib-po",
    "bugs": "https://github.com/iLib-js/ilib-mono/issues",
    "email": "marketing@translationcircle.com",
    "license": "Apache-2.0",
    "author": {
        "name": "Edwin Hoogerbeets",
        "web": "http://www.translationcircle.com/",
        "email": "edwin@translationcircle.com"
    },
    "contributors": [
        {
            "name": "Edwin Hoogerbeets",
            "email": "ehoogerbeets@gmail.com"
        },
        {
            "name": "Goun Lee",
            "email": "goun.lee@lge.com"
        }
    ],
    "files": [
        "src",
        "lib",
        "ilib-po.d.ts",
        "README.md",
        "LICENSE"
    ],
    "repository": {
        "type": "git",
        "url": "git@github.com:iLib-js/ilib-mono.git"
    },
    "scripts": {
        "build": "pnpm run build:prod",
        "build:pkg": "echo '{\"type\": \"commonjs\"}' > lib/package.json",
        "build:prod": "tsc --project tsconfig.json --outDir lib --module commonjs",
        "build:dev": "tsc --project tsconfig.json --outDir lib --module commonjs --pretty --sourceMap",
        "dist": "npm-run-all --npm-path pnpm doc types build:prod build:pkg; pnpm pack",
        "test": "LANG=en_US.UTF8 NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest  --testEnvironment node",
        "test:watch": "pnpm test:jest --watch",
        "debug": "LANG=en_US.UTF8 NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules --inspect-brk\" jest -i  --testEnvironment node",
        "clean": "git clean -f -d src test",
        "doc": "mkdir -p docs ; npm-run-all --npm-path pnpm doc:html doc:md",
        "doc:md": "mkdir -p docs ; typedoc --entryFileName index --plugin typedoc-plugin-markdown --skipErrorChecking --cleanOutputDir false --readme none --out docs src/index.ts",
        "doc:html": "mkdir -p docs ; typedoc --out docs --skipErrorChecking --cleanOutputDir false src/index.ts",
        "types": "tsc --declaration --emitDeclarationOnly -p ./tsconfig.json --outDir lib --module commonjs --outFile ./ilib-po.d.ts"
    },
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "@tsconfig/node14": "^14.1.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^20.11.5",
        "docdash": "^2.0.2",
        "grunt": "^1.5.3",
        "grunt-babel": "^8.0.0",
        "grunt-cli": "^1.4.3",
        "grunt-contrib-clean": "^2.0.1",
        "grunt-contrib-jshint": "^3.2.0",
        "grunt-contrib-nodeunit": "^4.0.0",
        "grunt-contrib-uglify": "^5.2.2",
        "jest": "^29.7.0",
        "jsdoc": "^4.0.2",
        "jsdoc-to-markdown": "^8.0.0",
        "load-grunt-tasks": "^5.1.0",
        "npm-run-all": "^4.1.5",
        "ts-jest": "^29.2.5",
        "typedoc": "^0.26.11",
        "typedoc-plugin-markdown": "^4.2.10",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "ilib-ctype": "^1.2.1",
        "ilib-tools-common": "^1.11.0"
    }
}
