{
    "name": "lint-test",
    "plugins": [
        "python",
        "python-gnu",
        "react"
    ],
    "locales": [
        "en-US",
        "de-DE"
    ],
    "rulesets": {
        "generic": {
            "resource-quote-style": true,
            "resource-unique-keys": true,
            "resource-url-match": true,
            "resource-state-checker": "translated"
        }
    },
    "filetypes": {
        "jsx": {
            "ruleset": [ "generic", "react" ]
        },
        "python" : {
            "ruleset": [ "generic", "python", "python-gnu" ]
        },
        "xliff": {
            "ruleset": [ "generic", "python", "python-gnu" ]
        }
    },
    "paths": {
        "xliffs/*.xliff": "xliff",
        "src/**/*.py": "python",
        "src/**/*.jsx": "jsx"
    },
    "excludes": [
        "**/.git",
        "**/node_modules",
        "**/.svn",
        "package.json",
        "package-lock.json"
    ]
}
