{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./",
    "rootDir": "./",
    "declaration": false,
    "noEmit": false,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
} 